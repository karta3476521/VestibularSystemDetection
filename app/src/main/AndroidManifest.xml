<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boss.vestibularsystemdetection">

    <uses-feature android:name="android.hardware.sensor.accelerometer" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" />
    <uses-feature android:name="android.hardware.sensor.compass" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="前庭平衡測量"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListOfViewActivity" />
        <activity android:name=".SelectMeasurementMethodActivity" />
        <activity android:name=".VrMeasurementActivity" />
        <activity android:name=".ManualMeasurementActivity" />
        <activity android:name=".CenterMeasureActivity" />
        <activity android:name=".BalanceMeasureActivity" />
        <activity android:name=".CompleteActivity" />
        <activity android:name=".ChartActivity" />
        <activity android:name=".AnimationActivity" />
        <activity android:name=".InputHeightActivity" />
        <activity android:name=".SetTargetHeight" />
        <activity android:name=".NewListOfViewActivity"></activity>
    </application>

</manifest>